<div id="components" class="container" ng-app="receta" ng-controller="PcbuilderController">
  <div class="col-md-12">
    <div class="col-md-4" ng-repeat="component in components">
      <div class="panel panel-default">
        <div class="panel-body">
          <a><img class="center-block" ng-src="{{ component.image }}"></a>
        </div>
        <div class="panel-footer ">
          <a><h4 class="text-center">{{ component.name }}</h4></a>
        </div>
      </div>
    </div>
  </div>
</div>